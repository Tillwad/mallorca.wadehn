generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id           String   @id @default(uuid())

  startDate    DateTime
  endDate      DateTime
  flightNumber String?

  guest        Boolean   @default(false)
  personen     String[]  // Liste von Namen z.â€¯B. ["Max", "Lena"]

  createdAt    DateTime  @default(now())
}
